<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_padding">


        <ImageView
            android:id="@+id/videoThumbnailIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/vidit" />

        <TextView
            android:id="@+id/videoTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/videoThumbnailIV"
            android:layout_toRightOf="@+id/videoThumbnailIV"
            android:paddingLeft="@dimen/view_padding"
            android:text="@string/video_title_default"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/videoDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/videoTitleTV"
            android:layout_alignStart="@+id/videoTitleTV"
            android:layout_below="@+id/videoTitleTV"
            android:paddingLeft="@dimen/view_padding"
            android:text="@string/video_description_default" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
